<div>
  <p>
    <strong>Name:</strong>
    <%= game.name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= game.date %>
  </p>

  <% game.teams.each do |team| %>
    <p>
      <strong>Team:</strong>
      <%= team.name %>
      <% team.athletes.each do |athlete| %>
        <p>
          <strong>Athlete:</strong>
          <%= athlete.first_name %> <%= athlete.last_name %>
        </p>
      <% end %>
    </p>
  <% end %>

</div>
